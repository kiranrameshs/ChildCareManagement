	public void demoDialogBox() {
		int status = 0;
		String msg = "";
		/*
		 * Confirm Dialog Box Cancel=2, No = 1, Yes = 0
		 */
		status = JOptionPane.showConfirmDialog(null, "JOptionPane.showConfirmDialog()");
		JOptionPane.showMessageDialog(null, "JOptionPane.showMessageDialog(\"Hi!\") I got: [" + status + "]");

		/*
		 * Input Dialog Box
		 */
		msg = JOptionPane.showInputDialog(null, "JOptionPane.showInputDialog()");
		JOptionPane.showMessageDialog(null, "JOptionPane.showMessageDialog(\"Hi!\") I got '" + msg + "'");

	}

	public void popupTable() {
		/*
		 * Create table model (DefaultTableModel) for containing table data
		 */
		String [] colTitles = {"A","B", "C", "D"};
        DefaultTableModel myTM = new DefaultTableModel();
        myTM.setColumnCount(colTitles.length);
        /*
         * Add data (various types)to table model
         * Data is added as a row 
         * (row data is an Array of objects instantiated from Object class)
         * Add data one row at a time...
         */
        myTM.setColumnIdentifiers(colTitles);
        for (int ix=0; ix < 8; ++ix) {
        	int i1 = 0 + 10*ix;
        	int i2 = 3 + 10*ix;
        	char c3 = (char) (0x41 + ix);
        	double d4 = 1.0 + 10*ix;

        	myTM.addRow(new Object[]{ i1, i2, c3, d4 });
        }
        /*
         * create a table (JTable)
         */
        JTable table = new JTable();
        table.setModel(myTM);
        table.setAutoCreateRowSorter(true);  // sortable table
        table.setAutoResizeMode(JTable.AUTO_RESIZE_ALL_COLUMNS);
		
		/**
		 *  create a ScrollPane for wrapping the table 
		 *  and add ScrollPane with JTable to it's very own (pop-up) JFrame
		 */
        JFrame frame = new JFrame("Pop-up Table Example");
        frame.add(new JScrollPane(table));
//		frame.pack();	// use either frame.pack() OR frame.setSize()
		frame.setSize(300, 100);		// use either frame.setSize() OR frame.pack()
		/**
		 * exit entire program upon close of pop-up window
		 */
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setVisible(true);		
	}
	private void prepareGUI() {
	    JFrame frame = new JFrame("Java Swing GUI in JFrame");
	    frame.setSize(600, 400);
	    frame.setLayout(new GridLayout(3, 1));
	    frame.addWindowListener(new WindowAdapter() {
	    	public void windowClosing(WindowEvent windowEvent) {
	    	System.exit(0);
	    	}
		});
	    JPanel panel = new JPanel();
	    panel.setLayout(new FlowLayout()); // initial layout can be changed

	    frame.add(panel);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	    frame.setVisible(true);
	}

}
